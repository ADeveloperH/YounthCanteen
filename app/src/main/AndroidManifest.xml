<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobile.younthcanteen">

    <!-- 这个权限用于进行网络定位-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <!-- 这个权限用于访问GPS定位-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- 获取运营商信息，用于支持提供运营商信息相关的接口-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位-->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <!-- 用于读取手机当前的状态-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!-- 写入扩展存储，向扩展卡写入数据，用于写入离线定位数据-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 访问网络，网络定位需要上网-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- SD卡读取权限，用户写入离线定位数据-->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>


    <application
        android:name=".activity.CanteenApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:theme="@style/MyAppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppStartLoad">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 首页 -->
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <!-- 登录 -->
        <activity
            android:name=".activity.LoginActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <!-- 注册 -->
        <activity
            android:name=".activity.RegisterActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <!-- 忘记密码 -->
        <activity
            android:name=".activity.FindPwdActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 我的账号 -->
        <activity
            android:name=".activity.MyAccountActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 修改用户名 -->
        <activity
            android:name=".activity.ModifyNickNameActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 修改密码 -->
        <activity
            android:name=".activity.ModifyPwdActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible" />

        <!-- 我的收货地址 -->
        <activity
            android:name=".activity.MyAddressActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 新增收货地址 -->
        <activity
            android:name=".activity.AddAddressActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateAlwaysVisible"
            android:screenOrientation="portrait" />


        <!-- 商品详情页面 -->
        <activity
            android:name=".activity.GoodsDetailInfoActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />


        <!-- 套餐商品详情页面 -->
        <activity
            android:name=".activity.PackageGoodsInfoActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 支付订单页面 -->
        <activity
            android:name=".activity.PayActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />


        <!-- 支付密码修改页面 -->
        <activity
            android:name=".activity.ModifyPayPwdActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />



        <!-- 余额页面 -->
        <activity
            android:name=".activity.BalanceActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />


        <!-- 余额明细页面 -->
        <activity
            android:name=".activity.ConsumeDetailActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />


        <!-- 订单详情页面 -->
        <activity
            android:name=".activity.OrderDetailActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 添加备注页面 -->
        <activity
            android:name=".activity.AddRemarkActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait" />

        <!-- 账户充值页面 -->
        <activity
            android:name=".activity.AccountRechargeActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait" />

        <!-- 选择具体地址页面 -->
        <activity
            android:name=".activity.CheckOfficeActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <!-- 选择商圈页面 -->
        <activity
            android:name=".activity.CheckBusinessCircleActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 更多套餐页面 -->
        <activity
            android:name=".activity.MoreGoodsActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 搜索页面 -->
        <activity
            android:name=".activity.SearchActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateAlwaysVisible"
            android:screenOrientation="portrait" />


        <!-- 下载apk -->
        <service android:name=".service.DownLoadService" />

        <receiver android:name=".receiver.UpdateClickBroadCastReceiver"></receiver>



        <!--百度地图start-->
        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="h3nGjmbsXOWp1b2mXc2S8f5IAPxkTG35" />

        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote"></service>
        <!--百度地图end-->

        <!--支付宝start-->
        <activity
            android:name="com.alipay.sdk.app.H5PayActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind" >
        </activity>
        <activity
            android:name="com.alipay.sdk.auth.AuthActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind" >
        </activity>
        <!--支付宝end-->
    </application>

</manifest>