<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/home_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="7dp">

        <ImageView
            android:id="@+id/home_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_home_icon_select"
            android:focusable="false"></ImageView>

        <TextView
            android:id="@+id/home_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textColor="#67c0f4"
            android:textSize="10dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/find_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="7dp">

        <ImageView
            android:id="@+id/find_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_selector_find_icon"
            android:focusable="false"></ImageView>

        <TextView
            android:id="@+id/find_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单"
            android:textColor="@drawable/tab_selector_textview"
            android:textSize="10dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/custome_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="7dp">

        <ImageView
            android:id="@+id/custome_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_selector_customer_icon"
            android:focusable="false"></ImageView>

        <TextView
            android:id="@+id/custom_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textColor="@drawable/tab_selector_textview"
            android:textSize="10dp"></TextView>
    </LinearLayout>


</LinearLayout>