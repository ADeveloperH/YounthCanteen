<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:id="@+id/home_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_imageview"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:focusable="false"
            android:src="@drawable/tab_home_icon_select"></ImageView>

        <TextView
            android:id="@+id/home_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textColor="@color/black"
            android:textSize="14dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/find_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/find_imageview"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:focusable="false"
            android:src="@drawable/tab_selector_order_icon"></ImageView>

        <TextView
            android:id="@+id/find_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单"
            android:textColor="@drawable/tab_selector_textview"
            android:textSize="14dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/custome_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/custome_imageview"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:focusable="false"
            android:src="@drawable/tab_selector_customer_icon"></ImageView>

        <TextView
            android:id="@+id/custom_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textColor="@drawable/tab_selector_textview"
            android:textSize="14dp"></TextView>
    </LinearLayout>


</LinearLayout>