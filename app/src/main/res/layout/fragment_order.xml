<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="订单"
            android:textColor="@color/black"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_allogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_header"
        android:orientation="vertical">

        <com.mobile.younthcanteen.ui.TabPageIndicator
            android:id="@+id/tab_page_indicator"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:visibility="visible" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tab_page_indicator"
            android:background="@color/white"
            android:overScrollMode="never" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_unlogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/order_nologin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="您还没有登录，请登录后查看订单"
            android:textColor="#606060"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/order_login_btn_bg"
            android:gravity="center"
            android:padding="0dp"
            android:text="登录/注册"
            android:textColor="#000000"
            android:textSize="16dp" />
    </LinearLayout>
</RelativeLayout>